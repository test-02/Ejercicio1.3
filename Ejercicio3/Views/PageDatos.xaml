<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio3.Views.PageDatos">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Nombre" FontSize="Title" Padding="0,0,0,0"/>
            <Entry x:Name="nombre" Placeholder="Ingrese Nombre:" Keyboard="Text" Margin="5,0,5,0"/>

            <Label Text="Apellidos" FontSize="Title" Padding="0,0,0,0"/>
            <Entry x:Name="apellidos" Placeholder="Ingrese Apellidos:" Keyboard="Text" Margin="5,0,5,0"/>

            <Label Text="Edad" FontSize="Title" Padding="0,0,0,0"/>
            <Entry x:Name="edad" Placeholder="Ingrese Edad:" Keyboard="Numeric" Margin="5,0,5,0"/>

            <Label Text="Correo" FontSize="Title" Padding="0,0,0,0"/>
            <Entry x:Name="correo" Placeholder="Ingrese correo:" Keyboard="Email" Margin="5,0,5,0" />

            <Label Text="Direccion" FontSize="Title" Padding="0,0,0,0"/>
            <Entry x:Name="direccion" Placeholder="Ingrese Direccion:" Keyboard="Text" Margin="5,0,5,0"/>

            <Button Text="Salvar" x:Name="btnsalvar" Clicked="btnsalvar_Clicked" BackgroundColor="AliceBlue" TextColor="Blue" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>